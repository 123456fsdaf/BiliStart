<UserControl
    x:Class="BiliStart.Styles.Search.SearchAnimation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:BiliStart.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliStart.Styles.Search"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">
    <Grid>
        <control:NullContent
            _NummPopup="{x:Bind ViewModel.Popup_Visibility, Mode=OneWay}"
            _TipMessage="{x:Bind ViewModel.TipMessage, Mode=OneWay}" />
        <ui:AdaptiveGridView ItemsSource="{x:Bind ViewModel._Items, Mode=OneWay}" />
    </Grid>
</UserControl>
