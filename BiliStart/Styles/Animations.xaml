


<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animation="using:CommunityToolkit.WinUI.UI.Animations">
    <animation:AnimationSet x:Name="GridVideoEnter">
        <animation:ScaleAnimation
            EasingMode="EaseOut"
            EasingType="Cubic"
            To="1.2"
            Duration="0:0:0.5" />
    </animation:AnimationSet>
    <animation:AnimationSet x:Name="GridVideoExit">
        <animation:ScaleAnimation
            EasingMode="EaseOut"
            EasingType="Cubic"
            To="1"
            Duration="0:0:0.5" />
    </animation:AnimationSet>
</ResourceDictionary>
