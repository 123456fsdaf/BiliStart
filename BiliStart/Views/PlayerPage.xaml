<Page
    x:Class="BiliStart.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="using:BiliStart.Behaviors.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:BiliBiliAPI.Models.Videos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d">
    <Page.Resources>
        <convert:PlayerSliderConvert x:Key="SliderConvert" />
    </Page.Resources>
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition
                x:Name="MoreColumn"
                Width="3*"
                MaxWidth="450" />
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="TitleBar"
            Grid.ColumnSpan="2"
            Margin="50,0,0,0">
            <TextBlock
                x:Name="TitleBarText"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}" />
        </Grid>
        <Button
            Grid.Row="0"
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Canvas.ZIndex="2"
            Command="{x:Bind ViewModel.GoBackCommand}"
            Style="{ThemeResource AccentButtonStyle}">
            <FontIcon
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                FontSize="10"
                Glyph="&#xE112;" />
        </Button>
        <Border
            x:Name="mediaborder"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="10"
            ui:UIElementExtensions.ClipToBounds="True"
            Background="Black"
            CornerRadius="10">
            <MediaPlayerElement
                x:Name="media"
                Margin="5"
                CornerRadius="10" />
        </Border>
        <Border
            Grid.Row="1"
            Margin="5"
            Padding="10"
            VerticalAlignment="Bottom"
            CornerRadius="5">
            <Border.Background>
                <SolidColorBrush
                    Opacity="0.5"
                    Color="{ThemeResource SolidBackgroundFillColorBase}" />
            </Border.Background>
            <Grid
                HorizontalAlignment="Stretch"
                Canvas.ZIndex="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Button
                        Click="Button_Click_1"
                        Content="Start/Pause" />
                </Grid>
                <Slider
                    x:Name="process"
                    Grid.Column="1"
                    Margin="10,0"
                    ManipulationCompleted="process_ManipulationCompleted"
                    ManipulationMode="All"
                    Maximum="{x:Bind ViewModel.MaxValue, Mode=OneWay}"
                    ThumbToolTipValueConverter="{ThemeResource SliderConvert}"
                    Value="{x:Bind ViewModel.SliderValue, Mode=OneWay}" />
                <Grid Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,0,0,0">
                            <ComboBoxItem Content="0.5" />
                            <ComboBoxItem Content="1" />
                            <ComboBoxItem Content="1.5" />
                            <ComboBoxItem Content="2" />
                        </ComboBox>
                        <ComboBox
                            x:Name="Play_Suppout"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            ItemsSource="{x:Bind ViewModel._Supports, Mode=OneWay}"
                            SelectedIndex="{x:Bind ViewModel._SupportIndex, Mode=TwoWay}"
                            SelectionChanged="{x:Bind ViewModel.Support_SelectionChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="data:Support_Formats">
                                    <TextBlock Text="{x:Bind New_description, Mode=OneWay}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button
                            Margin="5,0,0,0"
                            HorizontalAlignment="Right"
                            Click="Button_Click"
                            Content="{x:Bind ViewModel._FullButtonText, Mode=OneWay}"
                            FontFamily="Segoe MDL2 Assets" />

                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Pivot
            x:Name="RightPivot"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="1">
            <PivotItem
                xmlns:data="using:BiliBiliAPI.Models.Videos"
                x:Name="PagePivotItem"
                Header="PageList">
                <ListView
                    ItemsSource="{x:Bind ViewModel.VideoPages, Mode=OneWay}"
                    SelectedIndex="{x:Bind ViewModel.PageSelectIndex, Mode=TwoWay}"
                    SelectionChanged="{x:Bind ViewModel.ListView_SelectionChanged}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="data:Page">
                            <TextBlock Text="{x:Bind Title, Mode=OneWay}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem
                Content="Data"
                Header="Data" />
            <PivotItem
                Content="Comment"
                Header="Comment" />
            <PivotItem
                Content="More"
                Header="More" />
        </Pivot>
        <Border
            x:Name="bottommenu"
            Grid.Row="3"
            Margin="10,10"
            Padding="15"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <ToggleButton Margin="0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="15"
                            Glyph="&#xE19F;" />
                        <TextBlock
                            Margin="5,0,0,0"
                            Text="Like" />
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Margin="5,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                            FontSize="15"
                            Glyph="&#xEDE3;" />
                        <TextBlock
                            Margin="5,0,0,0"
                            Text="Coins" />
                    </StackPanel>
                </ToggleButton>
                <Button Margin="5,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="15"
                            Glyph="&#xE1CE;" />
                        <TextBlock
                            Margin="5,0,0,0"
                            Text="Favourite" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <TextBlock Text="this is a Favourite" />
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <ToggleButton Margin="5,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            Glyph="&#xEC92;" />
                        <TextBlock
                            Margin="5,0,0,0"
                            Text="AddTimeLook" />
                    </StackPanel>
                </ToggleButton>
            </StackPanel>

        </Border>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="PlayState">
                <VisualState x:Name="Width450">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MoreColumn.Width" Value="450" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Width460">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MoreColumn.Width" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
