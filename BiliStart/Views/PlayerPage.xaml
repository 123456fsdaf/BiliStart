<Page
    x:Class="BiliStart.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:brushes="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliStart.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:winex="using:WinUIEx"
    mc:Ignorable="d">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="TitleBar">
            <TextBlock Text="TitleBar" />
        </Grid>
        <Button
            x:Uid="Player_GoHome"
            Grid.Row="1"
            Margin="5,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Canvas.ZIndex="2"
            Command="{x:Bind ViewModel.GoBackCommand}"
            Style="{ThemeResource AccentButtonStyle}" />
        <MediaPlayerElement
            x:Name="media"
            Grid.Row="1"
            Grid.RowSpan="2"
            Background="Transparent" />
        <Border
            Grid.Row="1"
            Margin="5"
            Padding="10"
            VerticalAlignment="Bottom"
            CornerRadius="5">
            <Border.Background>
                <SolidColorBrush
                    Opacity="0.5"
                    Color="{ThemeResource SolidBackgroundFillColorBase}" />
            </Border.Background>

            <Grid
                HorizontalAlignment="Stretch"
                Canvas.ZIndex="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="2">
                    <Button
                        HorizontalAlignment="Right"
                        Click="Button_Click"
                        Content="{x:Bind ViewModel._FullButtonText, Mode=OneWay}"
                        FontFamily="Segoe MDL2 Assets" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
