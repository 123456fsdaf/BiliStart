<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:extend="clr-namespace:ZUDesignControl.Extend;assembly=ZUDesignControl"
    xmlns:vm="clr-namespace:BiliStart.ViewModel.HotViewModel">
    <DataTemplate x:Key="DefaultHotWeak" DataType="{x:Type vm:HotWeakDTVM}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Width="260"
                Height="170"
                extend:BorderImageSoureExtend.AnimationType="Opacity"
                extend:BorderImageSoureExtend.Source="{Binding _Items.VideoImage}"
                CornerRadius="10" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>